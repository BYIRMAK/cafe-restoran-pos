name: Build and Release

on: 
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build: 
    runs-on: windows-latest
    
    steps: 
    - uses: actions/checkout@v4
    
    - name: Setup MSBuild
      uses: microsoft/setup-msbuild@v1. 1
    
    - name: Setup NuGet
      uses: nuget/setup-nuget@v1
    
    - name:  Restore
      run: nuget restore CafeRestaurantPOS.sln
    
    - name:  Build
      run: msbuild CafeRestaurantPOS.sln /p:Configuration=Release
    
    - name:  Package
      run: |
        Compress-Archive -Path "CafeRestaurantPOS/bin/Release/*" -DestinationPath "MenuSoft-POS. zip"
        Compress-Archive -Path "LicenseManager/bin/Release/*" -DestinationPath "MenuSoft-LicenseManager.zip"
      shell: pwsh
    
    - name:  Upload
      uses: actions/upload-artifact@v4
      with:
        name:  MenuSoft-Complete
        path: "*. zip"
